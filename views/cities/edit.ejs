<div class="row">
    <div class="col-sm-12">
        <ol class="breadcrumb">
            <li><a href="/dashboard/index">صفحه اصلی</a></li>
            <li><a href="/cities">مدیریت شهر‌ها</a></li>
            <li class="active"><%= title %></li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-sm-12">
        <form action="/cities/<%= city.id %>/update" method="post">
            <input type="hidden" name="_csrf" value="<%= _csrf %>">
            <div class="form-group">
                <label for="name">نام</label>
                <input type="text" name="name" id="name" class="form-control" value="<%= city.name %>">
            </div>
            <div class="form-group">
                <input type="checkbox" name="active" id="active" <%= city.active ? 'checked' : '' %>>
                <label for="active">فعال / غیر فعال</label>
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-success" value="ذخیره">
                <input type="reset" value="لغو" class="btn btn-default">
            </div>
        </form>
    </div>
</div>