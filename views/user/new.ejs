<div class="row">
    <div class="col-sm-12">
        <ol class="breadcrumb">
            <li><a href="/dashboard">صفحه اصلی</a></li>
            <li><a href="/user">مدیریت کاربران</a></li>
            <li class="active"><%= title %></li>
        </ol>
    </div>
</div>
<% if(errors && errors.length){ %>
    <div class="row">
        <div class="col-sm-12">
            <div class="alert alert-danger">
                <ul>
                    <% errors.forEach(function(item){%>
                        <li><%= item %></li>
                    <%}) %>
                </ul>
            </div>
        </div>
    </div>
<% } %>
<div class="row">
    <div class="col-sm-12">
        <form action="/user/create" method="post">
            <div class="form-group">
                <label for="name">نام</label>
                <input type="text" name="name" id="name" class="form-control" value="<%= old ? old.name || '' : '' %>">
            </div>
            <div class="form-group">
                <label for="username">نام کاربری</label>
                <input type="text" class="form-control" name="username" id="username"  value="<%= old ? old.username || '' : '' %>">
            </div>
            <div class="form-group">
                <label for="email">پست‌الکترونیکی</label>
                <input type="text" class="form-control" name="email" id="email"  value="<%= old ? old.email || '' : '' %>">
            </div>
            <div class="form-group">
                <label for="password">رمز عبور</label>
                <input type="password" name="password" id="password" class="form-control">
            </div>
            <div class="form-group">
                <input type="hidden" name="_csrf" value="<%= _csrf %>">
                <input type="submit" name="submit" id="submit" class="btn btn-success" value="ذخیره">
                <input type="reset" class="btn btn-default" name="reset" id="reset" value="لغو" />
            </div>
        </form>

    </div>
</div>