<div class="row">
    <div class="col-sm-12">
        <ol class="breadcrumb">
            <li><a href="/dashboard">صفحه اصلی</a></li>
            <li><a href="/user/<%= model.id %>/view"><%= model.name %></a></li>
            <li class="active"><%= title %></li>
        </ol>
    </div>
</div>
<% if (typeof errors !== 'undefined' && errors.length > 0){ %>
<div class="row">
    <div class="col-sm-12">
        <div class="alert alert-danger">
            <ul class="show-message">
                <% errors.forEach(function (item){%>
                <li><%= item %></li>
                <%}) %>
            </ul>
        </div>
    </div>
</div>
<% } %>
<div class="row">
    <div class="col-sm-12">
        <form action="/user/<%= model.id %>/update" method="post">
            <input type="hidden" value="<%= _csrf %>" name="_csrf">
            <div class="form-group">
                <label for="username">نام کاربری</label>
                <input type="text" name="username" id="username" value="<%= model.username %>" class="form-control">
            </div>
            <div class="form-group">
                <label for="name">نام</label>
                <input type="text" name="name" id="name" value="<%= model.name %>" class="form-control">
            </div>
            <div class="form-group">
                <label for="email">پست الکترونیکی</label>
                <input type="text" name="email" id="email" value="<%= model.email %>" class="form-control">
            </div>
            <div class="form-group">
                <label for="status">وضعیت</label>
                <select name="status" id="status" class="form-control">
                    <option   <%= model.status === '10' ? 'selected' : '' %> value="10">مدیر کل</option>
                    <option  <%= model.status === '9' ? 'selected' : '' %> value="9">مدیر </option>
                    <option <%= model.status === '0' ? 'selected' : '' %> value="0">غیر فعال</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="ذخیره" class="btn btn-success">
                <input type="reset" class="btn btn-default" value="لغو">
            </div>
        </form>
    </div>
</div>