<div class="row">
    <div class="col-sm-12">
        <ol class="breadcrumb">
            <li><a href="/dashboard">صفحه اصلی</a></li>
            <li class="active"><%= title %></li>
        </ol>
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <a href="/user/new" class="btn btn-success">کاربر جدید</a>
        <a href="/user/search" class="btn btn-default">جستجو</a>
    </div>
</div>
<p>&nbsp;</p>
<div class="row">
    <div class="col-sm-12">
        <table class="table table-responsive table-bordered">
            <thead>
            <tr>
                <th class="col-sm-1">#</th>
                <th>نام</th>
                <th>نام کاربری</th>
                <th>پست الکترونیکی</th>
                <th class="col-sm-2">وضعیت</th>
                <th class="col-sm-1"><span class="fa fa-gear"></span></th>
            </tr>
            </thead>
            <tbody>
            <% var index = 1; %>
            <% _.each(models, function(model){ %>
            <tr>
                <td><%= index++ %></td>
                <td><%= model.name %></td>
                <td><%= model.username %></td>
                <td><%= model.email %></td>
                <td>
                    <%= model.status === '10' ? 'مدیر کل' : (model.status === '9' ? 'مدیر' : 'غیر فعال') %>
                </td>
                <td>
                    <a href="/user/<%= model.id %>/view" class="text-info"><span class="fa fa-eye"></span></a>
                    <a href="/user/<%= model.id %>/edit" class="text-warning"><span class="fa fa-edit"></span></a>
                    <a href="/user/<%= model.id %>/delete" class="text-danger" onclick="return confirm('آیا مطمئن هستید؟')"><span class="fa fa-trash"></span></a>

                </td>
            </tr>
            <% }); %>
            </tbody>
        </table>
    </div>
</div>
<% if(count > 1){ %>
<div class="row">
    <div class="col-sm-12">
        <nav aria-label="Page navigation">
            <ul class="pagination">
                <% for(var i = 1; i <= count; i++){ %>
                <% if(pageid === i){ %>
                <li class="active"><a href="#"><%= i %></a></li>
                <% }else{ %>
                <li><a href="/user?page=<%= i %>"><%= i %></a></li>
                <% } %>
                <% } %>
            </ul>
        </nav>
    </div>
</div>
<% } %>